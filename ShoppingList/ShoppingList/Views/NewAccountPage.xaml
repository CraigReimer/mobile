<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.NewAccountPage"
             Title="Create Account">
    <StackLayout
        Padding="20,20">
        <Label
            Text="Account Info"
            FontAttributes="Bold"
            FontSize="Large"/>

        <Border
            Stroke="Black"
            StrokeThickness="1"
            Margin="15,10,0,10" >

            <Entry
                x:Name="txtUsername"
                Placeholder="Username"/>

        </Border>

        <Border
            Stroke="Black"
            StrokeThickness="1"
            Margin="15,10,0,40" >

            <Entry
                Placeholder="Email Address"/>

        </Border>

        <Border
            Stroke="Black"
            StrokeThickness="1"
            Margin="15,10,0,10" >

            <Entry
                Placeholder="Password"/>

        </Border>

        <Border
            Stroke="Black"
            StrokeThickness="1"
            Margin="15,10,0,10" >

            <Entry
                Placeholder="Re-Enter Password"/>

        </Border>

        <Button
            Text="Create Account"
            Margin="0,20"
            x:Name="btnCreateAccount"
            Clicked="btnCreateAccount_Clicked" />

    </StackLayout>
</ContentPage>
