<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomGPS.MainPage">

   <StackLayout
       Padding="20,60,20,20">
       <Label
           Text="Lat: 11111111"
           FontSize="Large"
           x:Name="lblLat"/>
       <Label
           Text="Long: 22222222"
           FontSize="Large"
           x:Name="lblLong"
           Padding="0,10,0,60"/>
       <Label
           Text="Street Address"
           FontSize="Large"
           FontAttributes="Bold"
           TextDecorations="Underline"
           Padding="0,0,0,15"/>
       <Label
           x:Name="lblAddress"
           Text="1825 N Bluemound Ave."
           FontSize="Large"
           Padding="15,0,0,0"/>
       <Label
           x:Name="lblAddress2"
           Text="Appleton WI 54912"
           FontSize="Large"
           Padding="15,0,0,60"/>
       <Button
           Text="Update Location"
           x:Name="btnUpdateLocation"
           Clicked="btnUpdateLocation_Clicked"/>

   </StackLayout>

</ContentPage>

