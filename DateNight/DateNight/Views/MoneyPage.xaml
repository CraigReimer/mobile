<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DateNight.Views.MoneyPage"
             Title="MoneyPage">
    <VerticalStackLayout
        Padding="20, 20" >

        <Image
            Source="money_main"
            Margin="0, 20" />

        <Label
            FontSize="Title"
            Text= "$0.00"
            HorizontalOptions="Center"
            x:Name="lblDisplay" />

    </VerticalStackLayout>
</ContentPage>
