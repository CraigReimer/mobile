<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimerPro.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30">

            <Label
                Text="00:00:00"
                x:Name="lblDisplay"
                Padding="0,75"
                FontSize="Title"
                HorizontalOptions="Center"/>

            <Button
                Text="Start"
                x:Name="btnStart"
                Clicked="btnStart_Clicked"/>

            <Button
                Text="Stop"
                x:Name="btnStop"
                Clicked="btnStop_Clicked"
                IsEnabled="False"/>

            <Button
                Text="Reset"
                Clicked="btnReset_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

